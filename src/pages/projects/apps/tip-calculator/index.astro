    body {
        width: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        background-color: var(--primary-light-1);
    }

    .container-tip-calc {
        width: 100%;
        max-width: 1000px;
        margin: 3rem 1rem;
    }

    header {
        margin-top: 3rem;
        padding: 2rem;
    }

    main {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
