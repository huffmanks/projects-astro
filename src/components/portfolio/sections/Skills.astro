---
import { skills } from "../../../data/skills";
---

<section class="my-10 sm:my-14">
  <h2 class="mb-5 font-medium text-gray-800 dark:text-neutral-200">Skills</h2>
  <div class="space-y-3">
    {
      skills.map((group) => (
        <dl class="flex flex-col sm:flex-row gap-x-4 gap-y-2">
          <dt class="min-w-40">
            <span class="block text-sm text-gray-500 dark:text-neutral-400">{group.title}</span>
          </dt>
          <dd>
            <ul>
              {group.skills.map((item) => (
                <li class="[&:not(:last-child)]:me-1.5 [&:not(:last-child)]:after:content-[','] inline-flex items-center text-sm text-gray-800 dark:text-neutral-200">
                  <Fragment set:html={item.svg} />
                  <span>{item.title}</span>
                </li>
              ))}
            </ul>
          </dd>
        </dl>
      ))
    }
  </div>
</section>
