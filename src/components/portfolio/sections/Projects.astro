---
import { projects } from "../../../data/projects";
---

<section id="projects" class="mt-10 sm:mt-14 scroll-mt" data-nav-section="#projects">
  <h2 class="mb-5 font-medium text-gray-800 dark:text-neutral-200">Projects</h2>
  <div class="grid sm:grid-cols-2 gap-4">
    {
      projects.map((project) => (
        <div>
          {project?.imgSrc && (
            <div class="project-image rounded-md">
              <img class="mb-2 w-full object-cover overflow-hidden rounded-md" src={project.imgSrc} alt={project.title} />
            </div>
          )}
          <div class="pb-2">
            <h3 class="mb-1 text-gray-800 dark:text-neutral-200">{project.title}</h3>
            <p class="mb-4 text-xs text-gray-600 dark:text-neutral-400 line-clamp-2">{project.description}</p>
            <div class="flex items-center gap-2">
              {project?.repoLink && (
                <a href={project.repoLink} class="flex items-center gap-x-1 btn btn-outline" target="_blank" rel="noopener">
                  <svg class="shrink-0 size-3" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                    <title>GitHub</title>
                    <path d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12" />
                  </svg>
                  <span class="text-xs">Repo</span>
                </a>
              )}

              {project?.demoLink && (
                <a href={project.demoLink} class="flex items-center gap-x-1 btn btn-outline" target="_blank" rel="noopener">
                  {project.supportsAndroid ? (
                    <svg class="shrink-0 size-3" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 16 16">
                      <title>Android</title>
                      <path
                        fill="currentColor"
                        fill-rule="evenodd"
                        d="M11 .371a.25.25 0 0 0-.437-.243l-.643 1.16a3.5 3.5 0 0 0-.996-.265c-.195-.022-.428-.022-.892-.022s-.697 0-.892.022a3.5 3.5 0 0 0-.996.265L5.5.128a.25.25 0 1 0-.437.243L5.7 1.52a3.52 3.52 0 0 0-1.65 2.59c-.022.195-.022.428-.022.892h8c0-.464 0-.697-.022-.892a3.49 3.49 0 0 0-1.65-2.59l.637-1.15zm-4.97 3.13a.5.5 0 1 0 0-1a.5.5 0 0 0 0 1m4.5-.5a.5.5 0 1 1-1 0a.5.5 0 0 1 1 0"
                        clip-rule="evenodd"
                      />
                      <path
                        fill="currentColor"
                        d="M1 6a1 1 0 0 1 2 0v4a1 1 0 0 1-2 0zm12 0a1 1 0 0 1 2 0v4a1 1 0 0 1-2 0zM4 6v6a1 1 0 0 0 1 1v2a1 1 0 0 0 2 0v-2h2v2a1 1 0 0 0 2 0v-2a1 1 0 0 0 1-1V6z"
                      />
                    </svg>
                  ) : (
                    <svg class="shrink-0 size-3" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                      <title>Display screen</title>
                      <path
                        fill="none"
                        stroke="currentColor"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="1.5"
                        d="M14 2h-4c-3.28 0-4.919 0-6.081.814a4.5 4.5 0 0 0-1.105 1.105C2 5.08 2 6.72 2 10s0 4.919.814 6.081a4.5 4.5 0 0 0 1.105 1.105C5.08 18 6.72 18 10 18h4c3.28 0 4.919 0 6.081-.814a4.5 4.5 0 0 0 1.105-1.105C22 14.92 22 13.28 22 10s0-4.919-.814-6.081a4.5 4.5 0 0 0-1.105-1.105C18.92 2 17.28 2 14 2m-3 13h2m1.5 7l-.316-.419c-.71-.944-.887-2.387-.437-3.581M9.5 22l.316-.419c.71-.944.887-2.387.437-3.581M7 22h10"
                        color="currentColor"
                      />
                    </svg>
                  )}
                  <span class="text-xs">{project?.supportsAndroid ? "APK" : project.isDesign ? "Design" : "Demo"}</span>
                </a>
              )}
            </div>
          </div>
        </div>
      ))
    }
  </div>
</section>
