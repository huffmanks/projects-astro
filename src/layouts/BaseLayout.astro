---
import '@fontsource-variable/roboto-mono'
import '@fontsource-variable/raleway'
import '@fontsource-variable/space-grotesk'

interface Props {
    title: string
    bgColor?: string
    textColor?: string
    isFontMono?: boolean
    isFontSpace?: boolean
}

const { title, bgColor, textColor, isFontMono, isFontSpace } = Astro.props
---

<html lang='en' class='h-full'>
    <head>
        <meta charset='utf-8' />
        <link rel='icon' type='image/svg+xml' href='/favicon.ico' />
        <meta name='viewport' content='width=device-width' />
        <meta name='generator' content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body
        class={`h-full ${bgColor} ${textColor} ${
            isFontMono ? 'font-["Roboto_Mono_Variable",_sans-serif]' : isFontSpace ? 'font-["Space_Grotesk_Variable",_sans-serif]' : 'font-["Raleway_Variable",_sans-serif]'
        }`}>
        <slot />
    </body>
</html>
